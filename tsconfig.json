{
  "compilerOptions": {
    "target": "ES2022",                               
    "lib": ["ES2023"],                                   
    "module": "node16",                    
    "baseUrl": "./",                                  
    "paths": {
      "@/*": ["./src/*"]
    },                                     
    "allowImportingTsExtensions": true,              
    "declaration": true,                            
    "emitDeclarationOnly": true,              
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "skipLibCheck": true                         
  },
}